/job:
  /{id}:
    delete:
      description: Deletes Salesforce Bulk job
      responses:
        204:
  /status:
    get:
      queryParameters:
        limit:
          description: The number of records to return. Defaults to 20. Maximum up to 100 records per request.
          required: false
          type: integer
          example: 100
        offset:
          description: Number of rows to skip before returning.
          required: false
          type: integer
          example: 10
        orderBy:
          description: The field used to order job definition results. The default order is by systemModstamp.
          required: false
          type: string
          example: "systemModstamp"
        states:
          description: Get jobs in specific states. Valid states are Open, UploadComplete, Failed, Aborted, and JobComplete. The parameter’s value can be a comma-delimited list.
          required: false
          type: string
          example: "Open"
      description: Retrieves All Salesforce Bulk job details
      responses:
        200:
          body:
            application/json:
    /{id}:
      uriParameters: 
        id:
          description: Salesforce Bulk job id
          type: string
          example: 'f00692cd-22ba-447f-bdfb-7f701ad78336'
      get:
        description: Retrieves Salesforce Bulk job details
        responses:
          200:
            body:
              application/json: