#%RAML 1.0
title: Salesforce Data Cloud System API
description: >-
 The salesforce System API lets you build apps and integrations that extend and enhance the salesforce CDP resources.
protocols:
  - HTTPS
version: v1

/abandoned_checkout:
  post:
    description: Upsert abandoned_checkout records
    body:
      application/json:
        type: array
        items: !include dataTypes/abandonedCheckoutType.raml
      application/csv:
        type: array
        items: !include dataTypes/abandonedCheckoutType.raml
    responses:
      "202":
        description: Accepted
      "204":
        description: No Content
      "400":
        description: Bad Request
      "401":
        description: Unauthorized
      "404":
        description: Not Found
      "500":
        description: Internal Server Error
  delete:
    description: Delete abandoned_checkout records
    queryParameters:
      ids:
        description: Id of abandoned_checkout
        required: true
        type: array
        examples:
          integerIds:
            strict: false
            value:
              - 1
              - 2
              - 3
        items:
          type: integer
        maxItems: 200
        minItems: 1
    responses:
      "202":
        description: Accepted
      "400":
        description: Bad Request
      "401":
        description: Unauthorized
      "404":
        description: Not Found
      "500":
        description: Internal Server Error
